[
  {
    "name": "Job Alerts",
    "predicate": "any",
    "conditions": [
      { "field": "from", "predicate": "contains", "value": "hirist.tech" },
      { "field": "from", "predicate": "contains", "value": "linkedin.com" },
      { "field": "subject", "predicate": "contains", "value": "job" },
      { "field": "subject", "predicate": "contains", "value": "application" },
      { "field": "subject", "predicate": "contains", "value": "hiring" }
    ],
    "actions": {
      "mark_as_read": true,
      "move_to_folder": "Jobs"
    }
  },
  {
    "name": "Shopping & Deals",
    "predicate": "any",
    "conditions": [
      { "field": "from", "predicate": "equals", "value": "ajio.in" },
      { "field": "from", "predicate": "equals", "value": "mailer.ajio.in" },
      { "field": "subject", "predicate": "contains", "value": "offer" },
      { "field": "subject", "predicate": "contains", "value": "discount" },
      { "field": "subject", "predicate": "contains", "value": "sale" },
      { "field": "subject", "predicate": "contains", "value": "tee season" }
    ],
    "actions": {
      "mark_as_read": true,
      "move_to_folder": "Shopping"
    }
  },
  {
    "name": "Older than 30 days",
    "predicate": "all",
    "conditions": [
      { "field": "received", "predicate": "greater_than_days", "value": 30 }
    ],
    "actions": {
      "mark_as_read": false,
      "move_to_folder": "30_days_old_mails"
    }
  }
]